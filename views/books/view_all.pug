extends ../layout

block content
    h3 Books
    table
        thead
            tr
                th Title
                th Publisher
                th Page Number
                th Genre
                th

        tbody
            each book in books
                tr
                    td= book.title
                    td= book.publisher
                    td= book.page_number
                    td= book.genre
                    td
                        a(href=`/books/profile/${book.id}`) View Book
    a(href='/books/add') Add Book

